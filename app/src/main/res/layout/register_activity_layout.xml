<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/title"
        android:text="只需三步,完成注册!"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <RelativeLayout
        android:id="@+id/username_rl"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="用户名:"/>
        <EditText
            android:layout_below="@+id/username_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/theme_shape"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password_rl"
        android:layout_below="@+id/username_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="密码:"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@+id/password_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="@drawable/theme_shape"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password_sure_rl"
        android:layout_below="@+id/password_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/password_sure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="确认密码:"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@+id/password_sure_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="@drawable/theme_shape"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password_sure_rl"
        android:layout_below="@+id/password_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/password_sure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="确认密码:"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@+id/password_sure_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="@drawable/theme_shape"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sex_rl"
        android:layout_below="@+id/password_sure_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="确认密码:"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@+id/sex_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:background="@drawable/theme_shape"/>
    </RelativeLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/password_sure_rl"
        android:layout_centerHorizontal="true"
        android:background="@drawable/theme_shape"
        android:text="下一步"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
